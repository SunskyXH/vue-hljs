{
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
  },
  "include": ["lib/**.ts"],
  "exclude": ["node_modules"]
}
